# Digital Detox Weaver: Environment Configuration
# Copy this to .env.local and add your API keys

# LLM Provider Configuration
LLM_PROVIDER=claude
CLAUDE_API_KEY=your-claude-api-key-here
GEMINI_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
OPENAI_API_KEY=

# Model Selection
PRIMARY_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=claude-3-5-sonnet-20241022

# AWS Configuration
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Kiro Configuration
KIRO_PROJECT_NAME=digital-detox-weaver
KIRO_ENVIRONMENT=development
KIRO_LOG_LEVEL=INFO
KIRO_ENABLE_STREAMING=true
KIRO_ENABLE_MEMORY=true

# Data Configuration (SOURCE 1)
DATA_CACHE_DIR=./cache
OUTPUT_DIR=./outputs
ARCHIVE_DIR=./archives

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_LOGGER_LEVEL=info

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_AUTO_INSIGHTS=true
ENABLE_POLICY_RECOMMENDATIONS=true
ENABLE_REAL_TIME_UPDATES=true

# Data Source Tracking (Explicit Documentation)
DATA_SOURCE_1_ENABLED=true        # Epidemiological data generator
DATA_SOURCE_2_ENABLED=true        # AI-generated insights
DATA_SOURCE_3_ENABLED=true        # Original project code
DATA_SOURCE_4_ENABLED=true        # Orchestration framework

DATA_LINEAGE_TRACKING=true        # Enable data lineage logging
DATA_WEAVING_VERBOSE=true         # Detailed integration logging

# Performance
MAX_WORKERS=4
BATCH_SIZE=100
TIMEOUT_SECONDS=300